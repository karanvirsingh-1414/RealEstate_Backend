<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Real Estate Landing</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Title at top-left */
        .title {
            position: absolute;
            top: 10px;
            left: 20px;
            font-size: 24px;
            font-weight: bold;
            color: #ffffff;
        }

        /* Move buttons to the top-right */
        .auth-buttons {
            position: absolute;
            top: 10px;
            right: 20px;
            display: flex;
            gap: 15px;
        }

        .button {
            display: inline-block;
            padding: 12px 24px;
            font-size: 18px;
            font-weight: bold;
            text-decoration: none;
            color: #ffffff;
            background: linear-gradient(135deg, #1f6feb, #4a90e2);
            border-radius: 50px;
            box-shadow: 0px 4px 10px rgba(31, 111, 235, 0.3);
            transition: background 0.3s ease-in-out, transform 0.2s ease-in-out;
            border: none;
            cursor: pointer;
        }

        .button:hover {
            background: linear-gradient(135deg, #1a4cb3, #2563eb);
            transform: scale(1.08);
            box-shadow: 0px 6px 12px rgba(31, 111, 235, 0.5);
        }

        /* Centered title */
        h1 {
            text-align: center;
            margin-top: 60px;
        }

        /* Property Cards */
        .property-list {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .property-card {
            background: #161b22;
            padding: 20px;
            width: 300px;
            border-radius: 12px;
            box-shadow: 0px 4px 10px rgba(88, 166, 255, 0.2);
            text-align: center;
            transition: all 0.3s ease-in-out;
        }

        .property-card:hover {
            transform: scale(1.05);
            box-shadow: 0px 6px 12px rgba(88, 166, 255, 0.3);
        }

        .property-card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-radius: 8px;
            box-shadow: 0px 2px 6px rgba(255, 255, 255, 0.2);
        }

        .property-card h2,
        .property-card p {
            text-align: center;
            color: #e6edf3;
        }

        .view-details {
            margin-top: 15px;
        }

        .view-details a {
            display: inline-block;
            text-decoration: none;
            background-color: #58a6ff;
            color: white;
            padding: 10px 15px;
            border-radius: 8px;
            transition: all 0.3s;
        }

        .view-details a:hover {
            background-color: #1f6feb;
        }
    </style>
</head>
<body>
    <div style="font-size: 30px; color: #58a6ff; margin-top: 2.7%;margin-left: 2%;font-family:Georgia, 'Times New Roman', Times, serif;" class="title" >CU Enterprises&nbsp;  üè∞</div>

    <div class="auth-buttons">
        <a href="/login" class="button">Login</a>
        <a href="/register" class="button">Register</a>
    </div>

    <h1 style="color: white;">Welcome to Real Estate Platform</h1>

    <h2 style="text-align: center; margin-top: 7%;">Featured Properties</h2>
    <div class="property-list">
        <% properties.forEach(function(property) { %>
            <div class="property-card">
                <img src="<%= property.image %>" alt="<%= property.title %>">
                <h2><%= property.title %></h2>
                <p><strong>Location:</strong> <%= property.location %></p>
                <p><strong>Price:</strong> $<%= property.price %></p>
                <p><strong>Size:</strong> <%= property.size %> sqft</p>
                
                <!-- View Details Button -->
                <div class="view-details">
                    <a href="<%= property.link %>" target="_blank">View Details</a>
                </div>
            </div>
        <% }); %>
    </div>
</body>
</html>