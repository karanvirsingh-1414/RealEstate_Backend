            </div>
      
            <!-- Contact Info -->
            <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
              <h5 class="text-uppercase mb-4 font-weight-bold text-info">Contact</h5>
              <p><i class="bi bi-house-door-fill me-2"></i> Chitkara University, India</p>
              <p><i class="bi bi-envelope-fill me-2"></i> info@cuenterprises.com</p>
              <p><i class="bi bi-phone-fill me-2"></i> +91 79732xxxxx</p>
            </div>
          </div>
      
          <!-- Horizontal Line -->
          <hr class="mb-4">
      
          <!-- Bottom Row -->
          <div class="row align-items-center">
            <div class="col-md-7 col-lg-8">
                <center>  <p class="text-light">
               ¬© 2025 <strong class="text-info">CU Enterprises</strong>. All Rights Reserved.
              </p> </center>
            </div>
            <div class="col-md-5 col-lg-4">
              <!-- Social Icons (optional) -->
              <div class="text-center text-md-right">
                <a href="#" class="text-info me-3"><i class="bi bi-facebook"></i></a>
                <a href="#" class="text-info me-3"><i class="bi bi-twitter"></i></a>
                <a href="#" class="text-info me-3"><i class="bi bi-linkedin"></i></a>
                <a href="#" class="text-info"><i class="bi bi-github"></i></a>
              </div>
            </div>
          </div>
        </div>
      </footer>
      

  </div>





  
  




